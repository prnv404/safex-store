{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"stripInternal": true,
		"importHelpers": false,
		"strictNullChecks": true,
		"noImplicitAny": false,
		"declaration": true,
		"declarationDir": "dist",
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"sourceMap": true,
		"lib": ["dom", "es2015", "es5"],
		"outDir": "dist"
	},
	"include": ["src/index.ts", "src/cli.ts", "src/trie.ts"],
	"exclude": ["node_modules"]
}
